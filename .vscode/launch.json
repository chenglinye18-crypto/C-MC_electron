{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug main",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/finfet/main",
      "args": [
        "input.txt"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/finfet",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "/home/ic/trilinos_install/lib:${env:LD_LIBRARY_PATH}"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "text": "set breakpoint pending on",
          "description": "Allow breakpoints in not-yet-loaded code",
          "ignoreFailures": true
        },
        {
          "text": "set output-radix 10" 
        }
      ],
      "preLaunchTask": "build main"
    }
  ]
}
